doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='http://cdn.bootcss.com/bootstrap/3.3.2/css/bootstrap.min.css')
        script(src='/javascripts/CommentCoreLibrary.js')
    body
        #my-player.abp(style='width:100%; height:60%; background:#000;')
            #my-comment-stage.message-box
        #send-msg.container
            .col-md-2
                each val, index in sizes
                    .radio
                        label
                            if index == 3
                                input(type="radio" name="size" value=val.size checked)
                            else
                                input(type="radio" name="size" value=val.size)
                            = val.title
            .col-md-2
                each val, index in modes
                    .radio
                        label
                            if index == 0
                                input(type="radio" name="mode" value=val.mode checked)
                            else
                                input(type="radio" name="mode" value=val.mode)
                            = val.title
            .col-md-2
                each val, index in colors
                    .radio
                        label
                            if index == 0
                                input(type="radio" name="color" value=val.color checked)
                            else
                                input(type="radio" name="color" value=val.color)
                            = val.title
            .col-md-6
                .form-group
                    label 别拦我,我要来一发 ~_~
                    textarea.form-control(rows="3" name="content")
                
                button#btnSend.btn.btn-primary 发射^_^
        footer(style="margin-top:5em;")
